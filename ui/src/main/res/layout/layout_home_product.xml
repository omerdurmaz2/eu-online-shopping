<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:background="#f5f5f5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Macbook Pro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/iv_product_image"
            app:layout_constraintStart_toEndOf="@id/iv_product_image"
            app:layout_constraintEnd_toStartOf="@id/tv_product_discounted_price" />

        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MacBook Pro 2021 with mi..."
            android:textSize="14sp"
            android:textColor="#808080"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            app:layout_constraintStart_toStartOf="@id/tv_product_title"
            app:layout_constraintEnd_toEndOf="@id/tv_product_title" />

        <TextView
            android:id="@+id/tv_product_discounted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1749 TL"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_product_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1749 TL"
            android:textSize="14sp"
            android:textColor="#808080"

            android:textStyle="bold"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_discounted_price"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>